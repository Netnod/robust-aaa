extends ../layout

block content
  include ../partials/footer.pug
  div(class="col-sm-12 flex flex-col")
    h1(class="text-3xl mb-8")= domain.domain_name

    form(method="post" action=namedPath('create_test'))
      input(type="hidden" name="domain_id" value=domain.id)
      input(type="submit" class="btn btn-blue mb-4" value="Run new test")

    h2(class="text-xl mb-1") Test history

    table
      thead 
        tr(class="text-left")
          th Test id
          th Date
          th Status 
          th Score

      tbody
        each test in history 
          tr 
            td= test.id 
            td= formatTimestamp(test.created_at)
            td= test.test_status 
            td= test.final_score
  +footer