extends ../layout.pug

block content
  div(class="flex flex-col")
    h1(class="text-3xl mb-8") Mina sajter

    div(class="mb-4")
      a(class="btn btn-blue" href=namedPath('new_domain')) LÃ¤gg till en ny site

    table
      thead 
        tr(class="text-left")
          th URL
          th Skapad
          th Score 
          th Last tested at
      tbody
        each domain in domains 
          tr
            td
              a(
                class="text-blue-400"
                href=namedPath('domain_page', {id: domain.id})
              )= domain.domain_name
            td= formatTimestamp(domain.created_at)
            td= domain.final_score 
            td= domain.last_tested_at
